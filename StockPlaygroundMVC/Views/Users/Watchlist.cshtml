@using StockBL;
@model IEnumerable<WatchlistItems>

@{ Layout = "_Layout"; ViewBag.Title = "My watchlist";}

<h2>My watchlist <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>


@if (Model != null)
{
     <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Region</th>
                <th>Market Open</th>
                <th>Market Close</th>
                <th>Current stock price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Name</td>
                    <td>@r.Region</td>
                    <td>@r.MarketOpen</td>
                    <td>@r.MarketClose</td>
                    <td>@r.StockPrice</td>
                    <td>
                        <a asp-action="SeeCompanyOverwiew" asp-route-id="@r.Symbol">See company overview</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}